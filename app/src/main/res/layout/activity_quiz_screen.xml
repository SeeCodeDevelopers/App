<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="24dp"
    android:background="@color/snavy"
    tools:context=".QuizScreen">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/numQuestions"
        android:text="Number of Questions"
        android:textSize="20dp"
        android:textColor="@color/white"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/question"
        android:text="Question View"
        android:textAlignment="center"
        android:textStyle="bold"
        android:layout_above="@+id/optionLayout"
        android:textSize="24dp"
        android:textColor="@color/white"
        android:layout_margin="20dp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/optionLayout"
        android:layout_centerInParent="true"
        android:orientation="vertical">

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/optionA"
            android:layout_margin="5dp"
            android:backgroundTint="@color/white"
            android:text="Option A"
            android:textColor="@color/black"
            />
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/optionB"
            android:layout_margin="5dp"
            android:backgroundTint="@color/white"
            android:text="Option B"
            android:textColor="@color/black"
            />
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/optionC"
            android:layout_margin="5dp"
            android:backgroundTint="@color/white"
            android:text="Option C"
            android:textColor="@color/black"
            />
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/optionD"
            android:layout_margin="5dp"
            android:backgroundTint="@color/white"
            android:text="Option D"
            android:textColor="@color/black"
            />

    </LinearLayout>
    <Button
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:id="@+id/answerBt"
        android:text="GO"
        android:textSize="20dp"
        android:layout_below="@id/optionLayout"
        android:layout_marginTop="40dp"
        android:backgroundTint="@color/sisonkebrown"
        />



</RelativeLayout>